<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="804.0" prefWidth="1236.0"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="jogo.controllers.PauseController"
            stylesheets="@../assets/styles/transparente.css"
            fx:id="telaPause">

    <children>
        <ImageView fitHeight="804" fitWidth="1236" pickOnBounds="true" preserveRatio="false">
            <image>
                <Image url="@../assets/imagens/pause.png" />
            </image>
        </ImageView>

        <Button fx:id="VoltarAoJogo" layoutX="476.0" layoutY="267.0"
                mnemonicParsing="false" onAction="#voltarAoJogo"
                prefHeight="106.0" prefWidth="286.0" styleClass="transparent-button" />

        <Button fx:id="menuVoltar" layoutX="476.0" layoutY="411.0"
                mnemonicParsing="false" onAction="#voltarAoMenu"
                prefHeight="115.0" prefWidth="286.0" styleClass="transparent-button" />

      <Button fx:id="sair" layoutX="482.0" layoutY="561.0"
              mnemonicParsing="false" onAction="#sairDoJogo"
              prefHeight="106.0" prefWidth="281.0" styleClass="transparent-button" />

    </children>
</AnchorPane>
